<section>
  <%= form_with method: :get, html: { class:"row gy-3" } do |form| %>
    <div class="col-6">
      <%= form.select :status, [[t(:inactive), 0], [t(:active), 1], [t(:accept), 2], [t(:remove), 3]], { selected: params[:booking_status] }, { class: "form-select" } %>
    </div>
    <div class="col-6">
      <%= form.submit t(:submit), class: "btn btn-outline-primary w-100" %>
    </div>
  <% end %>
</section>
