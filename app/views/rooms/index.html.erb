<section>
  <div class="container">
    <div class="row g-3 mt-3">
      <div class="col-4">
        <%= react_component("room/list/Filter",
                            params: params,
                            t: {
                              simple_search: t(:simple_search),
                              attribute_search: t(:attribute_search),
                              search: t(:search),
                              from: t(:from),
                              to: t(:to)
                            },
                            attributes: @attributes
                           ) %>
      </div>
      <div class="col-8">
        <div class="row g-3">
          <%= render(@rooms, cardclass: "col-3", show_image: true) if @rooms.any?
        %>
        </div>
      </div>
      <div class="col-12">
        <%= render "shared/paginate", object: @rooms %>
      </div>
    </div>

  </div>
</section>
