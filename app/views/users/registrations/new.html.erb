<section>
  <div class="container my-5">
    <div class="row">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {
        class: "col-5"
      }) do |f| %>
      <div class="card">
        <div class="card-header">
          <h3 class="text-danger"><%= t :sign_up %></h3>
        </div>
        <div class="card-body d-grid gap-3">
          <%= render "shared/error_messages", object: resource %>
          <div class="field">
            <%= f.label t(:email), class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label t(:password), class: "form-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t :characters_minimum %>)</em>
            <% end %><br />

            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label t(:password_confirmation), class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label t(:phone), class: "form-label" %><br />
            <%= f.text_field :phone, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label t(:name), class: "form-label" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>


          <div class="actions">
            <%= f.submit t(:submit), class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>



    <div class="col-7 align-self-center px-5">
      <div>
        <h1 class="display-1 text-danger"><strong><%= t :welcome %></strong></h1>
        <h2><%= t :base_title %></h2>
        <p><%= t :our_bussiness %>
      <%= render "users/shared/links" %>
      </div>
    </div>




    </div>
  </div>
</section>
