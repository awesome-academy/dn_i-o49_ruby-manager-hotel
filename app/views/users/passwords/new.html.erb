<section>
  <div class="container my-5">
    <div class="row">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "col-5" }) do |f| %>
        <div class="card">
          <div class="card-header">
            <h3 class="text-danger"><%= t :forgot_your_password %>?</h3>
          </div>
          <div class="card-body d-grid gap-3">
            <%= render "shared/error_messages", object: resource %>

            <div class="field">
              <%= f.label t(:email), class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit t(:send_me_reset_password_instructions), class: "btn btn-outline-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    <div class="col-7 align-self-center px-5">
      <div>
        <h1 class="display-1 text-danger"><strong><%= t :welcome %></strong></h1>
        <h2><%= t :base_title %></h2>
        <p><%= t :our_bussiness %>
      <%= render "users/shared/links" %>
      </div>
    </div>
    </div>
  </div>
</section>
